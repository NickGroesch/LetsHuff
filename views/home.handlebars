{{!-- Home World --}}

{{#each articles}}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <a target="_blank" href="articles/{{this._id}}" class="btn btn-success">I Wanna Huff That</a>
            </div>
            <div class="col-9">
                <h5 class="card-title">{{this.title}}</h5>
                <div class="card-body"><a href="{{this.link}}">{{this.link}}</a></div>



            </div>
        </div>
        {{!-- psuedo modal for notes dialog --}}

    </div>
</div>


{{!-- <a target="_blank" href="articles/{{this._id}}">"{{this.title}}</a></br> --}}

{{/each}} {{#unless articles.length}}
<p>No Articles Found</p>
{{/unless}}